enum ContentType {
    IMAGE,
    MESSAGE,
    INFO,
}

type Message {
    username: String!
    content: String!
    contentType: ContentType!
    timestamp: String!
}

extend type Query {
    getMessagesPaginated(start: Int!, count: Int!): [Message!]!
    getLengthOfChatFeed: Int!
}

extend type Mutation {
    insertMessage(message: String!): Boolean!
    insertImage(data: String!): Boolean!
}

extend type Subscription {
    chatFeed: Message!
}
type Media {
    id: String!
}

extend type Mutation {
    load(file: String!): Media!
    play: Boolean!
    pause: Boolean!
    seek(currentTime: Float!): Boolean
}

enum Action {
    PLAY
    PAUSE
    SEEK
}

type MediaAction {
    action: Action!
    currentTime: Float
    user: String!
}

extend type Subscription {
    mediaActions: MediaAction!
}
type User {
    username: String!
    isReady: Boolean
    media: Media
}

enum UserAction {
    SIGN_IN
    SIGN_OUT
    CHANGE_MEDIA
    IS_READY
}

type UserActionEvent {
    action: UserAction!
    user: User!
}

type Mutation {
    signIn(username: String!, password: String): String!
    signOut: Boolean!
    readyCheck(isReady: Boolean!): Boolean!
}

type Query {
    getAllUsers: [User!]!
}

type Subscription {
    userAction: UserActionEvent!
}
